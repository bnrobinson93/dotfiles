# Ultra-fast zshrc - fixed starship initialization

# FAST compinit
autoload -Uz compinit
[[ ! -d "$HOME/.cache/zsh" ]] && mkdir -p "$HOME/.cache/zsh"
compinit -C -d "$HOME/.cache/zsh/zcompdump-$ZSH_VERSION"

